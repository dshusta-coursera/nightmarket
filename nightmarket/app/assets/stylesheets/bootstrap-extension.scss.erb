html {
	height: 100%;
	width: 100%;
}

body {
	@extend html;
	font-family: 'Open Sans', sans-serif;
}

h1, h2, h3, h4, h5, h6 {
	font-family: 'Josefin Sans', sans-serif;
	font-weight: 300;
}

hr {
	border-width: 3px;
	max-width: 50px;
}

/* Line colors */
hr.full {
	border-width: 1px;
	max-width: 100%;
}

hr.red {
	border-color: #F05F40;
}

hr.golden {
	border-color: #ffcc33;
}

hr.light {
	border-color: #ddd;
}

header {
	height: 100%;
	min-height: 100%;
	color: #fff;
	background-size: cover;
	background-position: center;
	text-align: center;
	width: 100%;

	.header-content {
		position: absolute;
		top: 40%;
		width: 100%
	}

	.header-footer {
		position: absolute;
		bottom: 5%;
		width: 100%;
	}
}

.centered-text {
	text-align: center
}

/* Header Images */
header.half {
	height: 50%;
	min-height: 50%;

	.header-content {
		top: 20%;
	}
}

header#home {
	background-image: url(<%= asset_data_uri 'header/2015_nightmarket_wushu_l.jpg' %>);
}

header#directions {
	background-image: url(<%= asset_data_uri 'header/2015_nightmarket_wushu_l.jpg' %>);
}

header#tickets {
	@extend header#directions
}

header#about {
	@extend header#directions
}

header#news {
	@extend header#directions
}

section {
	padding-top: 64px;
	padding-bottom: 64px;
	background-size: cover;
	background-position: center;
}

/* Section Themes */
section#home-introduction {
	background-color: #222;
	color: #fff;
}

section#home-night-market-testimonial {
	background-image: url(<%= asset_data_uri 'header/2015_nightmarket_tcsbooth_l.jpg' %>);
	color: #fff;
	padding-top: 256px;
	padding-bottom: 256px;
}

section#home-about {
	background-color: #32004c;
	color: #fff;
}